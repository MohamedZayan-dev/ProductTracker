<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TextView
    android:paddingTop="24dp"
    android:paddingLeft="15dp"

    android:text="Product Overview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#c92445"
    android:textSize="16sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      >
    <TextView
        android:text="Product Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:textSize="15sp"
        />
        <EditText
            android:id="@+id/et_order_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:text="Quanity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/et_order_product_quantity"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantity"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="4dp"/>
        </LinearLayout>

    <TextView
        android:paddingTop="24dp"
        android:paddingLeft="15dp"

        android:text="Shop Overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#c92445"
        android:textSize="16sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:text="Shop Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/et_order_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:text="Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/et_order_shop_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="4dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingLeft="15dp"
        android:paddingTop="18dp"
        android:text="Supplier Overview"
        android:textColor="#c92445"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:text="Supplier Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/et_order_supplier_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:text="E-mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/et_order_supplier_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail  eg. zayan32@gmail.com"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="4dp"
            />
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"
    android:layout_marginTop="50dp"/>
       <Button
           android:id="@+id/orderButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:text="order"
           android:background="#00ff71"
           android:layout_margin="50dp"
           />

</LinearLayout>
</ScrollView>